@{
	ViewData["Title"] = "Book Detail";
	Layout = "_BookLayout";
}


<div class="d-flex row justify-content-center">

	<div class="col-md-4 d-flex flex-column">
		<div class="section border-bottom-primary p-0">
			<h4 class="section-title m-1">The Alchemist</h4>
			<p class="section-description m-1">By Paulo Coelho </p>
			<p class="d-flex align-items-center m-1 mx-auto">
				<i class="fa fa-star star-color mr-1"></i>
				<i class="fa fa-star star-color mr-1"></i>
				<i class="fa fa-star star-color mr-1"></i>
				<i class="fas fa-star-half-alt star-color mr-1"></i>
				<i class="far fa-star star-color mr-1"></i>
				<span class="mr-3">3.5/5 </span>
				<span class="mr-3"><em> (2396 ratings)</em></span>
				<span> <em><i class="fa fa-file-alt star-color"></i> 129 pages</em></span>
			</p>
		</div>
		<div class="p-0">
			<h5 class="mt-2"><strong>About the book</strong></h5>
			<p class="description">
				World-renowned and award-winning author Paulo
				Coelho has 30 books	sold over 320 million
				copies in 170 countries.The 25th-anniversary edition
				of his international bestseller The Alchemist now includes a touching
				foreword added by Coelho.
			</p>
		</div>
		<div class="mt-auto d-flex justify-content-around mb-3">
			<button class="btn-primary-color btn-medium">Read Now <i class="fa fa-file"></i></button>
			<button class="btn-primary-color btn-medium">Download <i class="fa fa-download"></i></button>
		</div>
	</div>

	<div class="d-flex col-md-4 justify-content-center">
		<img src="~/img/history.png" class="card-img-top" alt="..." style="width:20rem;">
	</div>
</div>