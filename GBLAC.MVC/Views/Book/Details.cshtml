@{
	ViewData["Title"] = "Book Detail";
	Layout = "_BookLayout";
}


<div class="d-flex row justify-content-center mb-5">
	<div class="col-md-4 d-flex flex-column">
		<div class="section border-bottom-primary p-0">
			<h4 class="section-title m-1">The Alchemist</h4>
			<p class="section-description m-1">By Paulo Coelho </p>
			<p class="d-flex align-items-center m-1 mx-auto">
				<i class="fa fa-star star-color mr-1"></i>
				<i class="fa fa-star star-color mr-1"></i>
				<i class="fa fa-star star-color mr-1"></i>
				<i class="fas fa-star-half-alt star-color mr-1"></i>
				<i class="far fa-star star-color mr-1"></i>
				<span class="mr-3">3.5/5 </span>
				<span class="mr-3"><em> (2396 ratings)</em></span>
				<span> <em><i class="fa fa-file-alt star-color"></i> 129 pages</em></span>
			</p>
		</div>
		<div class="p-0">
			<h5 class="mt-2"><strong>About the book</strong></h5>
			<p class="description">
				World-renowned and award-winning author Paulo
				Coelho has 30 books	sold over 320 million
				copies in 170 countries.The 25th-anniversary edition
				of his international bestseller The Alchemist now includes a touching
				foreword added by Coelho.
			</p>
		</div>
		<div class="d-flex justify-content-around mt-3">
			<button class="btn-primary-color btn-medium">Read Now <i class="fa fa-file"></i></button>
			<button class="btn-primary-color btn-medium">Download <i class="fa fa-download"></i></button>
		</div>
	</div>

	<div class="d-flex col-md-4 justify-content-center">
		<img src="~/img/history.png" class="card-img-top" alt="..." style="width:20rem;">
	</div>
</div>

<div>
	<div class="section border-bottom-primary">
		<h4 class="section-title">Related Reads</h4>
		<p class="section-description">These are books that are realted to  Encounters at the Heart of the World</p>
	</div>

	<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
		<div class="carousel-inner">

			<div class="carousel-item active">
				<div class="d-flex align-content-center flez-row">
					@for (int i = 0; i < 8; i++)
					{
						<a asp-controller="book" asp-action="details" class="card ml-0 mr-4 mt-4 mb-4 p-0" style="width: 10rem;">
							@*<div class="card ml-0 mr-4 mt-4 mb-4 p-0" style="width: 14rem;">*@
							<img src="~/img/history.png" class="card-img-top" alt="...">
							<div class="card-body p-2">
								<h5 class="card-title book-title mb-1">Encounters at the Heart of the World</h5>
								<p class="card-text book-aurthor mb-1">Elizabeth A. Fenn</p>
								<p class="d-flex book-rating align-items-center justify-content-around m-1 mx-auto">
									<i class="fa fa-star star-color"></i>
									<i class="fa fa-star star-color"></i>
									<i class="fa fa-star star-color"></i>
									<i class="fa fa-star star-color"></i>
									<i class="fa fa-star star-color"></i>
									<span></span>
									<span>(4/5)</span>
									<i class="fa fa-bookmark primary-color ml-auto pt-1"></i>
								</p>
							</div>
							@*</div>*@
						</a>
					}
				</div>
			</div>

			<div class="carousel-item">
				<div class="d-flex align-content-center">
					@for (int i = 0; i < 8; i++)
					{
						<a asp-controller="book" asp-action="details" class="card ml-0 mr-4 mt-4 mb-4 p-0" style="width: 10rem;">
							@*<div class="card ml-0 mr-4 mt-4 mb-4 p-0" style="width: 14rem;">*@
							<img src="~/img/history.png" class="card-img-top" alt="...">
							<div class="card-body p-2">
								<h5 class="card-title book-title mb-1">Encounters at the Heart of the World</h5>
								<p class="card-text book-aurthor mb-1">Elizabeth A. Fenn</p>
								<p class="d-flex book-rating align-items-center justify-content-around m-1 mx-auto">
									<i class="fa fa-star star-color"></i>
									<i class="fa fa-star star-color"></i>
									<i class="fa fa-star star-color"></i>
									<i class="fa fa-star star-color"></i>
									<i class="fa fa-star star-color"></i>
									<span></span>
									<span>(4/5)</span>
									<i class="fa fa-bookmark primary-color ml-auto pt-1"></i>
								</p>
							</div>
							@*</div>*@
						</a>
					}
				</div>
			</div>
		</div>

		<a class="carousel-control-prev my-auto" href="#carouselExampleControls" role="button" data-slide="prev" style="background: #fae801; border-radius:50%; width:50px; height:50px;">
			<span class="fa fa-chevron-left secondary-color" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>

		<a class="carousel-control-next my-auto" href="#carouselExampleControls" role="button" data-slide="next" style="background: #fae801; border-radius:50%; width:50px; height:50px;">
			<i class="fa fa-chevron-right secondary-color" aria-hidden="true"></i>
			<span class="sr-only">Next</span>
		</a>
	</div>

</div>